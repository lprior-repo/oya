{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "oya",
  "version": "0.1.0",
  "identifier": "com.oya.desktop",
  "build": {
    "beforeDevCommand": { "cwd": "../oya-ui", "script": "trunk serve" },
    "devUrl": "http://localhost:8888",
    "beforeBuildCommand": { "cwd": "../oya-ui", "script": "trunk build --release" },
    "frontendDist": "../oya-ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OYA - Development Dashboard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "open": true
    }
  }
}
