layout {
    pane split_direction="horizontal" {
        pane {
            command "claude"
            cwd "/path/to/workspace"
            focus true
            size "70%"
        }
        pane split_direction="vertical" {
            pane {
                command "bv"
                cwd "/path/to/workspace"
                size "50%"
            }
            pane {
                command "jj"
                args "log" "--limit" "20"
                cwd "/path/to/workspace"
                size "50%"
            }
        }
    }
}
